@page "/dashboard"
@using Services.Posts
@using OPC5_BlogApp.Data.Models
@inject IPostService postService;
@inject NavigationManager navigation;
@rendermode InteractiveServer

<div class="dashboard-container">
    <!--Loop posts and display them one by one-->
    @if (posts == null)
    {
        <p>Loading posts...</p>
    }
    else
    {
        @foreach (var post in posts)
        {
            <div class="dashboard-post" id="@post.PostId">
                <div class="username">
                    <span>PostUser</span>
                </div>
                <div class="post">
                    <p style="margin-left: 5px;">@post.PostData</p>
                </div>
                <div class="footer">
                    <i @onclick="() => CommentPost(post)" class="fa fa-comment icon-comment"><span style="margin-left: 5px;">0</span></i>
                    <i @onclick="() => UpvotePost(post)" class="fas fa-thumbs-up icon-thumbsup"><span style="margin-left: 5px;">@post.PostUpvotes</span></i>
                    <i @onclick="() => DownvotePost(post)" class="fas fa-thumbs-down icon-thumbsdown"><span style="margin-left: 5px;">@post.PostDownvotes</span></i>
                </div>
            </div>
        }
    }
